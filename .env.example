# TeraBox Downloader Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================
# TELEGRAM BOT CONFIGURATION
# ===========================

# Bot token from @BotFather
BOT_TOKEN=your_bot_token_here

# API ID and Hash from https://my.telegram.org
API_ID=0
API_HASH=your_api_hash_here

# ===========================
# CHANNEL CONFIGURATION
# ===========================

# Channel ID where downloaded files are stored
# Format: -1001234567890 (negative sign + "100" + channel ID)
STORE_CHANNEL=-1001234567890

# Channel ID for error notifications
ERROR_CHANNEL=-1001234567891

# Channel ID for bot logs and status messages
LOG_CHANNEL=-1001234567892

# ===========================
# DATABASE CONFIGURATION
# ===========================

# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017

# Database name
DATABASE_NAME=terabox_bot

# ===========================
# FILE SIZE & LIMITS
# ===========================

# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Maximum file size for channel upload in MB (2GB)
SIZE_LIMIT_CHANNEL_MB=2000

# Files under this size (MB) will be sent to user directly
SIZE_LIMIT_USER_MB=10

# ===========================
# TIMEOUTS & RETRIES
# ===========================

# API request timeout in seconds
API_TIMEOUT=30

# Download timeout in seconds (1 hour)
DOWNLOAD_TIMEOUT=3600

# FFmpeg/FFprobe execution timeout in seconds
FFMPEG_TIMEOUT=30

# Number of API retry attempts
MAX_RETRIES=3

# ===========================
# FEATURE FLAGS
# ===========================

# Enable automatic video thumbnail generation
ENABLE_THUMBNAIL_GENERATION=true

# Enable metadata extraction (duration, resolution, codec)
ENABLE_METADATA_EXTRACTION=true

# Enable database logging of user actions
ENABLE_DATABASE_LOGGING=true

# Auto-cleanup downloaded files after upload
CLEANUP_DOWNLOADS=true

# Keep failed downloads for debugging
KEEP_FAILED_DOWNLOADS=false

# ===========================
# RATE LIMITING
# ===========================

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per minute per user
REQUESTS_PER_MINUTE=20

# ===========================
# LOGGING
# ===========================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================
# ADVANCED SETTINGS
# ===========================

# Chunk size for downloads in bytes (1MB)
CHUNK_SIZE=1048576

# Thumbnail width x height
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=180

# Thumbnail quality (1-100)
THUMBNAIL_QUALITY=85
