# TeraBox Bot Configuration Example
# Copy this file to .env and fill in your actual values

# ==================== Telegram Bot ====================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Get API_ID and API_HASH from https://my.telegram.org/
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# ==================== Database ====================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster0.gxhgvp4.mongodb.net/?retryWrites=true&w=majority

# ==================== Channels ====================
# Telegram channel IDs where files are stored
# You can get IDs by forwarding a message from the channel and checking the message details
STORE_CHANNEL=-1003235502239
ERROR_CHANNEL=-1003332074919
LOG_CHANNEL=-1003393746281

# ==================== Server Configuration ====================
# Port for Flask web server
PORT=5000
HOST=0.0.0.0

# Set to true for development (auto-reload, debug messages)
FLASK_DEBUG=False

# ==================== Deployment (Optional) ====================
# Webhook URL for Render/production deployment
# Example: https://terabox-bot-xxxxx.onrender.com/webhook
WEBHOOK_URL=https://terabox-bot-xxxxx.onrender.com/webhook

# ==================== Advanced (Optional) ====================
# Maximum file size to download (in bytes, default 2GB)
# MAX_FILE_SIZE=2147483648

# Maximum concurrent downloads (default 3)
# MAX_CONCURRENT_DOWNLOADS=3

# Request timeout (seconds, default 30)
# REQUEST_TIMEOUT=30

# MongoDB database name (default: terabox_bot)
# DATABASE_NAME=terabox_bot

# ===========================
# TIMEOUTS & RETRIES
# ===========================

# API request timeout in seconds
API_TIMEOUT=30

# Download timeout in seconds (1 hour)
DOWNLOAD_TIMEOUT=3600

# FFmpeg/FFprobe execution timeout in seconds
FFMPEG_TIMEOUT=30

# Number of API retry attempts
MAX_RETRIES=3

# ===========================
# FEATURE FLAGS
# ===========================

# Enable automatic video thumbnail generation
ENABLE_THUMBNAIL_GENERATION=true

# Enable metadata extraction (duration, resolution, codec)
ENABLE_METADATA_EXTRACTION=true

# Enable database logging of user actions
ENABLE_DATABASE_LOGGING=true

# Auto-cleanup downloaded files after upload
CLEANUP_DOWNLOADS=true

# Keep failed downloads for debugging
KEEP_FAILED_DOWNLOADS=false

# ===========================
# RATE LIMITING
# ===========================

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per minute per user
REQUESTS_PER_MINUTE=20

# ===========================
# LOGGING
# ===========================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================
# ADVANCED SETTINGS
# ===========================

# Chunk size for downloads in bytes (1MB)
CHUNK_SIZE=1048576

# Thumbnail width x height
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=180

# Thumbnail quality (1-100)
THUMBNAIL_QUALITY=85
